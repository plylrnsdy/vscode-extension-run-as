{
    "name": "run-as",
    "displayName": "Run as ...",
    "description": "Right click a file to run as the parameter of command in terminal.",
    "publisher": "plylrnsdy",
    "version": "1.8.16",
    "engines": {
        "vscode": "^1.17.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/plylrnsdy/vscode-run-as"
    },
    "icon": "images/icon.png",
    "keywords": [
        "execute",
        "run",
        "click"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.runAs"
    ],
    "main": "out/src/extension.js",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "publish": "npm run compile && vsce publish"
    },
    "contributes": {
        "commands": [{
            "title": "%command.runAs.title%",
            "command": "extension.runAs",
            "category": "RunAs"
        }],
        "menus": {
            "explorer/context": [{
                "command": "extension.runAs",
                "group": "navigation@44"
            }]
        },
        "configuration": {
            "type": "object",
            "title": "\"Run As ...\" Configuration",
            "properties": {
                "RunAs.changeCwd": {
                    "type": "object",
                    "description": "%RunAs.changeCwd.description%",
                    "default": {
                        "name": "Change Current Working Directory",
                        "command": "cd ${cwd}"
                    }
                },
                "RunAs.runInNewTerminalWindows": {
                    "type": "object",
                    "description": "%RunAs.runInNewTerminalWindows.description%",
                    "default": {
                        "enable": false,
                        "name": "New Terminal Window",
                        "command": {
                            "win32": "Start-Process cmd -ArgumentList '/c ${command}'",
                            "linux": "gnome-terminal -x bash -c '${command}'"
                        }
                    }
                },
                "RunAs.globsMapToCommand": {
                    "type": "array",
                    "description": "%RunAs.globsMapToCommand.description%",
                    "default": [{
                        "globs": "*.*",
                        "command": {
                            "win32": "start ${rPath}",
                            "linux": "gnome-open ${rPath}",
                            "darwin": "open ${rPath}"
                        },
                        "exceptions": [{
                            "globs": "*.@(bat|cmd|exe)",
                            "command": ".\\${rPath}",
                            "exceptions": [{
                                "globs": "*.watcher.@(bat|cmd)",
                                "command": "@out .\\${rPath}"
                            }]
                        }, {
                            "globs": "*.js",
                            "command": "node ${rPath}",
                            "exceptions": [{
                                "globs": "*.spec.js",
                                "command": "mocha ${rPath}"
                            }]
                        }, {
                            "globs": "**/@(src|test)/**/*.ts",
                            "command": "node ${`out/${dir}/${sFile}.js`}",
                            "exceptions": [{
                                "globs": "*.spec.ts",
                                "command": "mocha ${`out/${dir}/${sFile}.js`}"
                            }]
                        }, {
                            "globs": "*.py",
                            "command": "python ${rPath}"
                        }]
                    }]
                }
            }
        }
    },
    "__metadata": {
        "id": "6461046e-a9c8-44e6-abab-c48276a68a09",
        "publisherId": "7fdf942b-6fd2-438f-ad84-daa8718efb8c",
        "publisherDisplayName": "plylrnsdy"
    },
    "dependencies": {
        "micromatch": "^3.1.10"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/micromatch": "^3.1.0",
        "@types/mocha": "^2.2.43",
        "@types/node": "^7.0.43",
        "chai": "^4.1.2",
        "mocha": "^5.2.0",
        "typescript": "^2.5.2",
        "vscode": "^1.1.21"
    },
    "license": "MIT"
}
