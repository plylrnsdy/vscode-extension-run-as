{
    "name": "run-as",
    "displayName": "Run as ...",
    "description": "Right click a file to run as the parameter of command in terminal.",
    "publisher": "plylrnsdy",
    "version": "1.8.6",
    "engines": {
        "vscode": "^1.17.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/plylrnsdy/vscode-run-as"
    },
    "icon": "images/icon.png",
    "keywords": [
        "execute",
        "run",
        "click"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.runAs"
    ],
    "main": "out/src/extension.js",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "vscode:prepublish": "npm run compile"
    },
    "contributes": {
        "commands": [
            {
                "title": "%command.runAs.title%",
                "command": "extension.runAs"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.runAs",
                    "group": "navigation@4"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "\"Run As ...\" Configuration",
            "properties": {
                "RunAs.changeCwd": {
                    "type": "object",
                    "description": "%RunAs.changeCwd.description%",
                    "default": {
                        "name": "Change Current Working Directory",
                        "command": "cd ${cwd}"
                    }
                },
                "RunAs.runInNewTerminalWindows": {
                    "type": "object",
                    "description": "%RunAs.runInNewTerminalWindows.description%",
                    "default": {
                        "enable": false,
                        "name": "New Terminal Window",
                        "command": {
                            "win32": "Start-Process cmd -ArgumentList '/c ${command}'",
                            "linux": "gnome-terminal -x bash -c '${command}'"
                        }
                    }
                },
                "RunAs.globsMapToCommand": {
                    "type": "array",
                    "description": "%RunAs.globsMapToCommand.description%",
                    "default": [
                        {
                            "globs": "*.*",
                            "command": {
                                "win32": "start ${rPath}",
                                "linux": "gnome-open ${rPath}",
                                "darwin": "open ${rPath}"
                            },
                            "exceptions": [
                                {
                                    "globs": "*.@(bat|cmd|exe|sh)",
                                    "command": "${rPath}",
                                    "exceptions": [
                                        {
                                            "globs": "*.watcher.@(bat|cmd|sh)",
                                            "command": "@out ${rPath}"
                                        }
                                    ]
                                },
                                {
                                    "globs": "*.js",
                                    "command": "node ${rPath}",
                                    "exceptions": [
                                        {
                                            "globs": "*.spec.js",
                                            "command": "mocha ${rPath}"
                                        }
                                    ]
                                },
                                {
                                    "globs": "**/@(src|test)/**/*.ts",
                                    "command": "node ${`out/${dir}/${sFile}.js`}",
                                    "exceptions": [
                                        {
                                            "globs": "*.spec.ts",
                                            "command": "mocha ${`out/${dir}/${sFile}.js`}"
                                        }
                                    ]
                                },
                                {
                                    "globs": "*.py",
                                    "command": "python ${rPath}"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "__metadata": {
        "id": "6461046e-a9c8-44e6-abab-c48276a68a09",
        "publisherId": "7fdf942b-6fd2-438f-ad84-daa8718efb8c",
        "publisherDisplayName": "plylrnsdy"
    },
    "dependencies": {
        "minimatch": "^3.0.4"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.43",
        "@types/node": "^7.0.43",
        "del": "^3.0.0",
        "gulp": "^3.9.1",
        "gulp-changed": "^3.1.1",
        "gulp-copy": "^1.0.1",
        "gulp-shell": "^0.6.3",
        "gulp-typescript": "^3.2.3",
        "mocha": "^3.5.0",
        "typescript": "^2.5.2",
        "vscode": "^1.1.5"
    },
    "license": "MIT"
}
